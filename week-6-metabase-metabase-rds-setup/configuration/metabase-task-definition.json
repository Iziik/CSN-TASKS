[
        {
            "name"      : "metabase-container",
            "image"     : "metabase/metabase:latest",
            "portMappings" : [
                {
                    "containerPort" : 3000,
                    "hostPort"      : 3000,
                    "protocol"      : "tcp"
                }
            ],
            "essential" : true,
            "environment" : [
                {
                    "name"  : "MB_DB_TYPE",
                    "value" : "postgres"
                },
                {
                    "name"  : "MB_DB_DBNAME",
                    "value" : "${DB_NAME}"
                },
                {
                    "name"  : "MB_DB_PORT",
                    "value" : "${DB_PORT}"
                },
                {
                    "name"  : "MB_DB_USER",
                    "value" : "${DB_USER}"
                },
                {
                    "name"  : "MB_DB_PASS",
                    "value" : "${DB_PASSWORD}"
                },
                {
                    "name"  : "MB_DB_HOST",
                    "value" : "${DB_HOST}"
                }
            ]
        }
    ]